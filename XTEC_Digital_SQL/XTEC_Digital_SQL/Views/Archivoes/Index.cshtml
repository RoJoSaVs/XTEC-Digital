@model IEnumerable<XTEC_Digital_SQL.Models.Archivo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArchivoPdf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamanio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carpeta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArchivoPdf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamanio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carpeta.CarpetaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArchivoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArchivoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArchivoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
